
<%- include('../partials/header') %>

    <h3><%= skill.name %></h3>
    <h3>Learned: <%= skill.learned ? 'Yes' : 'Not quite' %></h3>

    <form action="/skills/<%= skill.id %>?_method=PUT" method="POST">
      <input type="text" name="name" value="<%= skill.name %>"><br>
      <label>
          <input type="checkbox" name="learned" <%= skill.learned ? 'checked' : '' %>>
          Learned?
      </label><br>
      <button type="submit">Update Skill</button>
    </form>
  
    <form action="/skills/<%= skill.id %>?_method=DELETE"
      method="POST"
      class="delete-form"
      >
      <button type="submit">DELETE</button>
    </form>

<%- include('../partials/footer') %>